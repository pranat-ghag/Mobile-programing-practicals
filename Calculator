import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {


  // This widget is the root of your application.
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Myhomepage()
    );
  }
}
class Myhomepage extends StatelessWidget{
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Flutter : Calulator 20/07/25',style: TextStyle(fontSize: 30,fontWeight: FontWeight.bold,color: Colors.pink),
        ),
        centerTitle: true,backgroundColor: Colors.cyanAccent,
      ),
      body:Calculator(),
    );
  }
}
      class Calculator extends StatefulWidget{
  State createState() => CalculatorState();
      }
    class CalculatorState extends State<Calculator> {
      String answer = 'your answer is :';

      var firstnum = TextEditingController();
      var secondnum = TextEditingController();

      Widget build(BuildContext context) {
        return Center(child:
        Card(child:
        Container(
          height: 400,
          width: 300,
          padding: EdgeInsets.all(16),
          margin: EdgeInsets.all(8),

          child: Column(
            children: <Widget>[
              SizedBox(height: 9),
              TextField(
                controller: firstnum,
                decoration: InputDecoration(
                    border: OutlineInputBorder(),
                    labelText: "First number",
                    hintText: "Enter the number",
                ),
              ),
              SizedBox(height: 9),
              TextField(
                controller: secondnum,
                decoration: InputDecoration(
                  border: OutlineInputBorder(),
                  labelText: "second number",
                  hintText: "Enter the number",
                ),
              ),
              Row(
                mainAxisAlignment: MainAxisAlignment.spaceBetween,
                children: [
                  SizedBox(height: 100,),
                  ElevatedButton(onPressed: () {
                    calculation("+");
                  }, child: Text('+', style: TextStyle(fontSize: 20),
                  )),
                  ElevatedButton(onPressed: () {
                    calculation("-");
                  }, child: Text('-', style: TextStyle(fontSize: 20)),),
                  ElevatedButton(onPressed: () {
                    calculation("*");
                  }, child: Text('*', style: TextStyle(fontSize: 20)),),
                  ElevatedButton(onPressed: () {
                    calculation("/");
                  }, child: Text('/', style: TextStyle(fontSize: 20)),),
                ],
              ),
              Container(
                width: 200,
                child: Text(answer , style: TextStyle(fontSize: 25),
                ),
              ),

            ],
          ),
        ),
        ),
        );
      }


      void calculation(String value) {
        double valueOne = double.parse(firstnum.text.toString());
        double valueTwo = double.parse(secondnum.text.toString());
        switch (value) {
          case "+":
            double value = valueOne + valueTwo;
            setState(() {
              answer = "Your answer is " + value.toString();
            });
            break;
          case "-":
            double value = valueOne - valueTwo;
            setState(() {
              answer = "Your answer is " + value.toString();
            });
            break;
          case "*":
            double value = valueOne * valueTwo;
            setState(() {
              answer = "Your answer is " + value.toString();
            });
            break;
          case "/":
            double value = valueOne / valueTwo;
            setState(() {
              answer = "Your answer is :" + value.toString();
            });
            break;
          default:
            print("no");
        }
      }
    }
