import 'package:flutter/material.dart';

void main() {
  runApp( MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
        title: 'Flutter RadioButton',
        home:HomeScreen()

    );
  }
}

class HomeScreen extends StatelessWidget {

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(centerTitle: true,
        foregroundColor: Colors.white,
        title: Text("Radiobutton 14-08-25"),
        backgroundColor: Colors.brown[700],
      ),
      body: Radiobutton(),
    );
  }
}
class Radiobutton extends StatefulWidget {
  State createState() => RadiobuttonState();
}
class RadiobuttonState extends State<Radiobutton> {
int classname = 0;

  Widget build(BuildContext context) {
    return Center(
      child: Column(
        children: <Widget>[
          SizedBox(height:20,),
          Text("Pranali Yenare",style:TextStyle(color: Colors.black,
              fontWeight: FontWeight.bold,
              fontSize: 25),),
          SizedBox(height:20,),
            Card(
          elevation: 30,
          color: Colors.brown[200],
          shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(20),
          ),
          child: Container(
          width: 350,
          height: 420,
          padding: EdgeInsets.all(17),
          child: Column(
          children: <Widget>[
          SizedBox(height: 35,),

          Text("CLASS",
            style: TextStyle(
                color: Colors.brown[900],
                fontWeight: FontWeight.bold,
                fontSize: 25),),
          ListTile(
          title:Text("FYIT",
            style: TextStyle(color: Colors.black,
                fontWeight: FontWeight.bold,
                fontSize: 25),),
          leading:Radio(value:1,
            groupValue: classname,
          onChanged:( value){
              setState(() {
                classname = value !;

              });

          }),),
            ListTile(
              title:
          Text("SYIT",
            style: TextStyle(color: Colors.black,
                fontWeight: FontWeight.bold,
                fontSize: 25),),
              leading:Radio(value:2,
                  groupValue: classname,
                  onChanged:( value){
                    setState(() {
                      classname = value !;

                    });
              }),),
            ListTile(
              title:
          Text("TYIT",
            style: TextStyle(color: Colors.black,
                fontWeight: FontWeight.bold,
                fontSize: 25),),
              leading:Radio(value:3,
                  groupValue: classname,
                  onChanged:( value){
                    setState(() {
                      classname = value !;

                    });
                  }),),
        ],
      ),
    ),
    ),
        ],
    ),
    );
  }
}
