    return MaterialApp(
        title: 'Stack',
        home: HomeScreen()
    );
  }
}

class  HomeScreen extends StatelessWidget {
  @override
  Widget build (BuildContext context) {
    return Scaffold(
        appBar:AppBar(centerTitle:true,
          foregroundColor:Colors.white,
          title:Text("Stack 22-08-25"),
          backgroundColor:Colors.blue[900],
        ),
        body: Stack1()
    );
  }
}
